#pragma warning(disable:4996)
#include<stdio.h>
int main()
{
	int i = 0;
	int n = 0;           //n为需要计算阶层的和的数(例如n=3，就是(1的阶层+2的阶层+3的阶层))
	int z = 1;
	int w = 0;           //w为结果
	for (n = 1;n <= 10;n++)        //中间n<=几可以根据所需修改,如果要计算3的阶层的和，就把10改成三
	{
		z = 1;
		for (i = 1;i <= n;i++)
		{
			z = z * i;
		}
		w = w + z;
	}
	printf("w=%d\n", w);
	return 0;
}
